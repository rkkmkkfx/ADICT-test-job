.page__content__cards__row
    display flex
    align-items baseline
    flex-wrap wrap
    justify-content space-between
    overflow hidden

.page__content__card
    margin-bottom 60px
    flex 0 0 100%
    transition opacity 1s, transform .5s
    opacity 0
    &.from-bottom
        transform translate(0, 500px)
    &.from-left
        transform translate(-100vw, 0)
    &.from-right
        transform translate(100vw, 0)
    &.animated
        transition opacity 2s, transform .5s
        transform translate(0, 0)
        opacity 1

    @media (min-width 960px)
        flex-grow 0
        flex-shrink 0
        flex-basis calc(50% - 15px)
    @media (min-width 1360px)
        flex-grow 0
        flex-shrink 0
        flex-basis calc(50% - 45px)
    @media (min-width 1920px)
        flex-grow 0
        flex-shrink 0
        flex-basis calc(50% - 60px)

.page__content__card__pic
    width 100%

.page__content__widecard
    display flex
    flex-wrap wrap
    @media (min-width 960px)
        background #fff
        min-height 750px
    @media (min-width 1920px)
        min-height 960px

    .page__content__widecard__pic
        background-size cover
        width 100%
        height 315px
        background-position center

        @media (min-width 1360px)
            width 50%
            height auto

    .page__content__widecard__text
        box-sizing border-box
        width 100%
        padding 10px 15px
        @media (min-width 960px)
            padding 45px 30px
        @media (min-width 1360px)
            width 50%
            padding 30px 50px 60px 45px

         @media (min-width 1920px)
             padding 70px 10% 70px 60px

    .page__content__card__desc
        columns 1
        @media (min-width 960px)
            columns 2
         @media (min-width 1360px)
             columns 1

.page__content__widecard-rtl
    flex-flow row-reverse
    flex-wrap wrap
    margin-bottom 0

    .page__content__widecard__pic
        background-position center
        width 100%
        height 315px
        @media (min-width 1360px)
            width 50%
            height auto

    .page__content__widecard__text
        width 100%
        @media (min-width 1360px)
            width 50%
            padding 30px 45px 60px 50px

        @media (min-width 1920px)
            padding 70px 60px 70px 10%

    .page__content__card__desc
        columns 1
        @media (min-width 960px)
            columns 2

        @media (min-width 1360px)
            columns: 1

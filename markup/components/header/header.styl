.page__header
    min-height 100vh
    background-image url('%=static=%img/general/header__background.jpg')
    background-size cover
    background-position center
    display flex
    justify-content center
    flex-flow column
    overflow hidden
    position relative

.page__header__heading
    font-size 68px
    font-family 'OswaldHeavy', sans-serif
    margin 20px auto
    z-index 2
    width 244px
    height 216px
    @media (min-width 960px)
        font-size 116px
        width 413px
        height 364px
        margin 130px auto
    @media (min-width 1360px)
        font-size 140px
        width 500px
        height 440px
        margin 100 auto
    @media (min-width 1920px)
        font-size  177px
        width 650px
        height 556px
        margin 110px auto
    tspan
        text-transform uppercase

.page__header__heading-big
    font-size 71px
    @media (min-width 960px)
        font-size 120px

    @media (min-width 1360px)
        font-size 145px

    @media (min-width 1920px)
        font-size 186px

.page__header__heading-small
    font-size 44px
    @media (min-width 960px)
        font-size 74px

    @media (min-width 1360px)
        font-size 89px

    @media (min-width 1920px)
        font-size 114px

canvas
    position absolute
    left 0
    bottom 0
    transform rotateZ(180deg) rotateY(180deg)
    max-width 100vw
    min-height 100%

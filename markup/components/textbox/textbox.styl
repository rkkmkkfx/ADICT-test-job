.page__content__textBox
    display flex
    align-items center
    min-height 100vh
    overflow hidden
    @media (min-width 960px)
        margin-bottom 0

    em
        width 100%
        z-index 2
        @media (min-width 960px)
            margin auto

.page__content__textBox-first
    color #342d2d
    position relative
    &::before
        content ''
        position absolute
        top 50px
        right -20px
        width 48px
        height 500px
        background-image url('%=static=%img/general/ear-2.png')
        background-size contain
        background-repeat no-repeat
        transform rotate(90deg)
        transform-origin 50% 0
        @media (min-width 960px)
            top: 0
            right 0
            width 100%
            height 100%
            transform none
            background-position 87% 100%
        @media (min-width 1360px)
            background-position 87.8% 100%
        @media (min-width 1920px)
            background-position 88.2% 100%
    &::after
        content ''
        position absolute
        top 90%
        left -10px
        width 25px
        height 500px
        background-image url('%=static=%img/general/ear-1.png')
        background-size contain
        background-repeat no-repeat
        transform rotate(-90deg)
        transform-origin 50% 0
        @media (min-width 960px)
            top 0
            left 0
            width 100%
            height 100%
            transform none
            background-position 90% 100%
    em
        @media (min-width 960px)
            width 500px
        @media (min-width 1360px)
            width 720px
        @media (min-width 1920px)
            width 1000px

.page__content__textBox-second
    background-image url('%=static=%img/general/branch-320.png')
    background-position 0 100%
    background-repeat no-repeat
    background-size 100%
    color #1f1f1f
    align-items flex-start
    @media (min-width 960px)
        background-image url('%=static=%img/general/branch.png')
        background-position 0 100%
        background-repeat no-repeat
        background-size 28%
    @media (min-width 1360px)
        align-items center
        background-size 22%
    @media (min-width 1920px)
        background-size 17%
    em

        @media (min-width 960px)
            width 540px
        @media (min-width 1360px)
            width 750px
        @media (min-width 1920px)
            width 1000px

.page__content__textBox-red
    background-color #cc1212
    justify-content center
    margin-bottom 120px
    text-align center
    h2
        color #fff
        font-size 30px
        line-height 45px
        padding 0 10%
        @media (min-width 960px)
            font-size 48px
            padding 0
        @media (min-width 1360px)
            font-size 50px
        @media (min-width 1920px)
            font-size 60px

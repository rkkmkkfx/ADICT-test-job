.page__content__counters
    background-image url("%=static=%img/general/counters__background.jpg");
    background-size cover
    display flex

.page__content__counters__items
    display flex
    flex-wrap wrap
    width 100%
    margin auto
    padding 35px 30px
    @media (min-width 960px)
        padding 0 60px
    @media (min-width 1920px)
        padding 0 180px

.page__content__counter
    box-sizing border-box
    color #fff;
    width 100%
    @media (min-width 960px)
        width 50%
        padding-right 75px
    @media (min-width 1360px)
        width calc(100% / 4)
        padding-right 4%
    @media (min-width 1920px)
        padding-right 7%

.page__content__counter__value
    line-height 45px
    color #fff
    margin-bottom 0
    @media (min-width 1920px)
        line-height 65px

.page__content__counter__units
    color #fff
    margin 0 0 24px
    @media (min-width 1360px)
        margin 0 0 40px

.page__content__counter__descr
    color #fffefe

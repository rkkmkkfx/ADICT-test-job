.page__footer
    color #fff
    background-image url("%=static=%general/footer__background.jpg")
    background-size cover
    background-position center
    margin 0

.page__footer__wrapper
    position relative
    box-sizing border-box
    display flex
    flex-wrap wrap
    flex-flow column
    text-align center
    height 100vh
    padding 45px 37px
    @media (min-width 960px)
        padding 0 10%
        justify-content center
    @media (min-width 1360px)
        padding 0 15%
    @media (min-width 1920px)
        padding 0 20%
    &::before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-image url('%=static=%general/fireman__mask.png')
        background-size cover
        background-position center

    h1
        font-family 'OswaldDemiBold', sans-serif
        font-size 48px
        line-height 60px
        margin-top 40px
        @media (min-width 960px)
            font-size 105px
            margin 105px auto 120px
        @media (min-width 1360px)
            margin 100px auto 160px
            font-size 132px
        @media (min-width 1920px)
            margin 130px auto
            font-size 165px
    em
        @media (max-width 959px)
            font-size 14px
            line-height 22px

_:-ms-fullscreen, :root .page__footer
    width 100vw

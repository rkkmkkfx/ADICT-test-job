// Common styles of the project

html body
    background #f5f5f5
    font-family 'Merriweather', serif

h2
    color #383530
    font-size 30px
    line-height 45px
    text-transform uppercase
    font-family 'OswaldDemiBold', sans-serif
    @media (min-width 960px)
        font-size 48px
        line-height 130px
    @media (min-width 1360px)
        font-size 50px
    @media (min-width 1920px)
        font-size 60px

h3
    font-family 'OswaldDemiBold', sans-serif
    font-size 22px
    line-height 30px
    text-transform uppercase
    color #342d2d
    margin 30px 0
    @media (min-width 960px)
        font-size 28px
        line-height 45px
    @media (min-width 1360px)
        font-size 30px
    @media (min-width 1920px)
        font-size 36px

p
    font-size 14px
    line-height 22px
    @media (min-width 960px)
        font-size 16px
        line-height 25px
    @media (min-width 1360px)
        font-size 18px
        line-height 30px

em
    font-style normal
    font-size 16px
    line-height 25px
    @media (min-width 960px)
        font-size 18px
        line-height 30px
    @media (min-width 1360px)
        font-size 24px
        line-height 45px

.page__wrapper
    max-width 287px
    margin 0 auto 60px
    @media (min-width 960px)
        max-width 870px
        margin 0 auto 90px
        min-height 630px
    @media (min-width 1360px)
        max-width 1230px
    @media (min-width 1920px)
        margin-bottom 120px
        max-width 1800px
        min-height 960px


.page__content__wrapper
    max-width 100%
    margin 0
    @media (min-width 1920px)
        margin 0 10%
        max-width 80%

.page__wrapper-wide
    max-width unset
